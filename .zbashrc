## local path
### local install path
export PATH="${HOME}/local/bin:$PATH"
export MANPATH="${HOME}/local/man:$MANPATH"
export LD_LIBRARY_PATH="${HOME}/local/lib:$HOME/local/lib64:/usr/local/lib:/usr/lib:$LD_LIBRARY_PATH"
#export C_INCLUDE_PATH="${HOME}/local/include:$C_INCLUDE_PATH"
export CPATH="${HOME}/local/include:$CPATH"

## for python pip local installed package
export PATH=${HOME}/.local/bin:$PATH 
export MANPATH=${HOME}/.local/man:$MANPATH
export LD_LIBRARY_PATH=${HOME}/.local/lib:$LD_LIBRARY_PATH
#export INCLUDE="${HOME}/.local/include:$INCLUDE"


## locale
export LANG=ja_JP.UTF-8
export LANGUAGE=en_US.UTF-8
export LC_TIME=en_US.UTF-8
export LC_MESSAGES=en_US.UTF-8


## alias
alias ls="ls -AFh --color=auto"
alias ll="ls -Glh --color=auto"
alias l="l -AFh --color=auto"

### Default to human readable figures
alias df='df -h' du='du -h'
alias ps="ps w"

alias emacs="emacs -nw"

### Git
alias gic="git commit -am"
alias gia="git add"

export SVN_EDITOR=vim
export GNUPLOT_LIB=""		# data or script path
export CYGWIN="nodosfilewarning winsymlinks:native"
export GREP_OPTIONS="--color=auto --binary-files=without-match"
export LV="-c -l" 
export LESS="-imr"


## for model setting
[ -e ~/.modelrc ] && source ~/.modelrc

## for other individual setting
[ -e ~/.otherrc ] && source ~/.otherrc
