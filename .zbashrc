## local path
### local install path
export PATH="${HOME}/local/bin:$PATH"
export MANPATH="${HOME}/local/man:$HOME/local/share/man:$MANPATH"
export LD_LIBRARY_PATH="${HOME}/local/lib:$HOME/local/lib64:/usr/local/lib:/usr/lib:$LD_LIBRARY_PATH"
#export C_INCLUDE_PATH="${HOME}/local/include:$C_INCLUDE_PATH"
export CPATH="${HOME}/local/include:$CPATH"

## for python pip local installed package
export PATH=${HOME}/.local/bin:$PATH
export MANPATH=${HOME}/.local/man:$HOME/.local/share/man:$MANPATH
export LD_LIBRARY_PATH=${HOME}/.local/lib:$LD_LIBRARY_PATH
#export INCLUDE="${HOME}/.local/include:$INCLUDE"

export PKG_CONFIG_PATH=$HOME/local/lib/pkgconfig:$PKG_CONFIG_PATH

## locale
export LANG=ja_JP.UTF-8
export LANGUAGE=en_US.UTF-8
export LC_TIME=en_US.UTF-8
export LC_MESSAGES=en_US.UTF-8

## For wget proxy
# export HTTP_PROXY="proxy.kuins.net:8080"
# export http_proxy="http://proxy.kuins.net:8080/"
# export ftp_proxy="http://proxy.kuins.net:8080/"

## alias
alias ls="ls -AFh --color=auto"
alias ll="ls -Gl --time-style=+'%Y-%m-%d %H:%M'"
alias l="ls -F"

### Default to human readable figures
alias df='df -h'
alias du='du -h'
alias ps="ps w"

# alias emacs="emacs -nw"

### Git
alias gic="git commit -am"
alias gia="git add"
alias gim="git mv"

### open
alias o="open"
case "${OSTYPE}" in
  freebsd*|darwin*) alias o="open" ;;
  linux*) alias open="xdg-open" ;; #    alias open="gnome-open";;
  cygwin*) alias open="cygstart" ;;
esac

### development
alias py='python'
alias rb='ruby'
alias gpp='g++ -Wall -std=c++1y'
alias gf='gfortran -Wall -static'
[ `command -v xstow` ] && alias stow=xstow

export SVN_EDITOR=vim
export GNUPLOT_LIB=""		# data or script path
export CYGWIN="nodosfilewarning winsymlinks:nativestrict"
export MSYS="winsymlinks:nativestrict"
export GREP_OPTIONS="--color=auto --binary-files=without-match"

## compile
# zshでは{=var}というようにして空白区切りで展開して使う。じゃないと使えない
export LIBCPP="-static-libgcc -static-libstdc++" # 標準ライブラリの埋め込み
[ `command -v wx-config` ] && export WXCONFIG="`wx-config --cppflags --libs | tr \"\n\" ' '`" # wxwidgetsのコンパイルフラグ

## Pager
export PAGER="less"
[ `command -v lv` ] && export PAGER=lv
export LV="-c -l"
export LESS="-imr"

## for model setting
[ -e ~/.modelrc ] && source ~/.modelrc

## for other individual setting
[ -e ~/.otherrc ] && source ~/.otherrc
