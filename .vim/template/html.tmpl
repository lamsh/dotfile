    <style>
@charset "utf-8";

/* こちらの節番号のほうが望ましい */
body {
  counter-reset: heading1;
}
section>h1 {
  counter-increment: heading1; counter-reset: heading2 table figure;}
section>h1::before {
  content: counter(heading1) " ";}

section>section>h1 {
  counter-increment: heading2; counter-reset: heading3;}
section>section>h1::before {
  content: counter(heading1) "." counter(heading2) " ";}

section>section>section>h1 {
  counter-increment: heading3; counter-reset: heading4;}
section>section>section>h1::before{
  content: counter(heading1) "." counter(heading2) "." counter(heading3) " ";}

section>section>section>section>h1 {
  counter-increment: heading4; counter-reset: heading5;}
section>section>section>section>h1::before {
  content: counter(heading1) "." counter(heading2) "." counter(heading3)
       "." counter(heading4) " ";}

section>section>section>section>section>h1 {
  counter-increment: heading5; counter-reset: heading6;}
section>section>section>section>section>h1::before {
  content: counter(heading1) "." counter(heading2) "." counter(heading3)
       "." counter(heading4) "." counter(heading5) " ";}

section>section>section>section>section>section>h1 {
  counter-increment: heading6;}
section>section>section>section>section>section>h1::before {
  content: counter(heading1) "." counter(heading2) "." counter(heading3)
       "." counter(heading4) "." counter(heading5) "." counter(heading6) " ";}

/* caption */
caption::before {
  counter-increment: table;
  content: "表" counter(heading1) "." counter(table) " ";
}

figcaption::before {
  counter-increment: figure;
  content: "図" counter(heading1) "." counter(figure) " ";
}


/* 節番号の設定 */
/* body { counter-reset: section1; } */
h1 {counter-increment: section1; counter-reset: section2　table figure;}
h1:before {content: counter(section1) " ";}

h2 {counter-increment: section2; counter-reset: section3;}
h2:before {content: counter(section1) "." counter(section2) " ";}

h3 {counter-increment: section3; counter-reset: section4;}
h3:before {content: counter(section1) "." counter(section2) "." counter(section3) " ";}

h4 {counter-increment: section4; counter-reset: section5;}
h4:before {content: counter(section1) "." counter(section2) "." counter(section3)
                "." counter(section4) " "}

h5 {counter-increment: section5; counter-reset: section6;}
h5:before {content: counter(section1) "." counter(section2) "." counter(section3)
                "." counter(section4) "." counter(section5) " ";}

h6 {counter-increment: section6;}
h6:before {content: counter(section1) "." counter(section2) "." counter(section3)
                "." counter(section4) "." counter(section5) "." counter(section6) " ";}

caption::before {
  counter-increment: table;
  content: "表" counter(section1) "." counter(table) " ";
}
body {counter-reset: figure;}
figcaption::before {
  counter-increment: figure;
  content: "図" counter(section1) "." counter(figure) " ";
}

/* list */
ol {
  counter-reset: enum;
}
ol li {
        list-style-type: none;
}
ol li::before {
  counter-increment: enum;
  content: counters(enum, ".") ". ";
}

/* caption */
body {counter-reset: listing;}
figcaption[id^="lis:"]::before {
  counter-increment: listing;
  content: "リスト" counter(section1) "." counter(listing) " ";
}
figcaption[class^="lis"]::before {
  counter-increment: listing;
  content: "リスト" counter(section1) "." counter(listing) " ";
}

/* table */
table {
  border-collapse: collapse;
  border: none;
  /* centering */
  margin-left: auto;
  margin-right: auto;
}
tr:nth-child(odd) {
  background:#ffffe6;
}
tr td {
  border: none;
}
tr:first-child td {
  border-top: solid;
  border-bottom: solid;
}
tr:last-child td {
  border-bottom: solid;
}

/* cross reference */
[href^="#chap:"]::before {
  content: "第";
}
[href^="#chap:"]::after {
  content: "章";
}
[href^="#sec:"]::after, [href^="#sub"]::after {
  content: "節";
}
[href^="#par:"]::after {
  content: "段落";
}
[href^="#enu:"]::before {
  content: "項目";
}
[href^="#eq:"]::before {
  content: "式(";
}
[href^="#eq:"]::after {
  content: ")";
}
[href^="#fig:"]::before {
  content: "図";
}
[href^="#tab:"]::before {
  content: "表";
}
[href^="#lis:"]::before {
  content: "リスト";
}

/* フォント設定 */
p {
  text-indent: 1em;
}
h1, h2, h3, h4, h5, h6 {
  font-family: "TeX Gyre Heros", "MigMix 1P", sans-serif;
  background-color: #e6e6ff;
}

/* PC語句 */
kbd, code, samp, var {
  font-family: Inconsolata, "Migu 1M", monospace;
  border-width: thin;
  border-style: solid;
  border-color: #cccccc;
  border-radius: 5px;
}
kbd {
  background-color: #ffe6e6;
}
code {
  background-color: #ffffe6;
}
samp {
  background-color: #e6e6e6;
}
var {
  font-style: normal;
  background-color: #80ffff;
}
pre {
  font-family: Inconsolata, "Migu 1M", monospace;
  background-color: #e6ffe6;
  overflow: auto;
}
